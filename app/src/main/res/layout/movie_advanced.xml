<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Actor"
            android:id="@+id/actor_movie"
            android:layout_below="@+id/title_movie"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:id="@+id/title_movie"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Explicit"
            android:id="@+id/explicit_movie"
            android:layout_above="@+id/actor_movie"
            android:layout_toEndOf="@+id/genre_movie" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Price"
            android:id="@+id/price_movie"
            android:layout_below="@+id/rating_movie"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ratings"
            android:id="@+id/rating_movie"
            android:layout_below="@+id/genre_movie"
            android:layout_alignEnd="@+id/genre_movie" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/Description_movie"
            android:layout_below="@+id/price_movie"
            android:layout_alignParentStart="true"
            android:layout_marginTop="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Genre"
            android:id="@+id/genre_movie"
            android:layout_below="@+id/actor_movie"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:id="@+id/imageView"
            android:layout_marginEnd="95dp"
            android:layout_below="@+id/explicit_movie"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>