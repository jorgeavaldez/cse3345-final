<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="me.jorgev.itunes.MainActivity"
    android:weightSum="1">



    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/query_box"
        android:hint="@string/query_box_hint"
        android:gravity="center_horizontal"
        android:layout_alignParentStart="false" />

    <LinearLayout
        android:id="@+id/button_anchor_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="false">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/advanced_form_anchor">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/query_buttons_layout">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_btn_text"
                android:id="@+id/search_button"
                android:onClick="onSearchButton"
                android:layout_alignParentLeft="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/advanced_search_btn"
                android:layout_alignParentRight="true"
                android:id="@+id/advanced_button"
                android:onClick="onAdvancedButton" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout android:id="@+id/footer" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button android:id="@+id/saveButton" android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="Dank Memes" />

        <Button android:id="@+id/cancelButton" android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="More Memes" />
    </LinearLayout>

</RelativeLayout>
