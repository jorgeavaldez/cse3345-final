<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="artist"
            android:id="@+id/artist_music"
            android:layout_below="@+id/title_music"
            android:layout_alignStart="@+id/title_music" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:id="@+id/title_music"
            android:textColor="@color/colorAccent"
            android:layout_alignTop="@+id/explicit_music"
            android:layout_alignStart="@+id/genre_music" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="x"
            android:id="@+id/explicit_music"
            android:layout_alignTop="@+id/picture_music"
            android:layout_toStartOf="@+id/title_music"
            android:textColor="#C9151C"
            android:textIsSelectable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Album"
            android:id="@+id/album_music"
            android:layout_below="@+id/genre_music"
            android:layout_alignStart="@+id/genre_music" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/description_music"
            android:layout_marginTop="63dp"
            android:layout_marginStart="51dp"
            android:layout_below="@+id/music_price"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Genre"
            android:id="@+id/genre_music"
            android:layout_below="@+id/artist_music"
            android:layout_alignStart="@+id/description_music" />

        <ImageView
            android:layout_width="200px"
            android:layout_height="200px"
            android:id="@+id/picture_music"
            android:layout_marginTop="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="86dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/button13"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/drawables"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Price"
            android:id="@+id/music_price"
            android:layout_below="@+id/album_music"
            android:layout_alignStart="@+id/album_music" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview"
            android:id="@+id/button16"
            android:background="@drawable/drawables"
            android:layout_below="@+id/music_price"
            android:layout_alignEnd="@+id/picture_music"
            android:layout_alignStart="@+id/picture_music" />


    </RelativeLayout>
</LinearLayout>