<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/super_item_title"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_marginStart="38dp"
        android:layout_alignParentTop="true"
     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Artist"
        android:id="@+id/super_item_artist"
        android:layout_below="@+id/super_item_title"
        android:layout_alignStart="@+id/super_item_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Genre"
        android:id="@+id/super_item_genre"
        android:layout_below="@+id/super_item_artist"
        android:layout_toEndOf="@+id/super_Item_Explicit" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/imageItem"
        android:layout_marginEnd="112dp"
        android:layout_alignBottom="@+id/super_item_genre"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/super_Item_Explicit"
        android:text="X"
        android:textColor="#C9151C"
        android:textSize="10dp"
        android:layout_alignBaseline="@+id/super_item_title"
        android:layout_alignBottom="@+id/super_item_title"
        android:layout_toStartOf="@+id/super_item_artist" />

</RelativeLayout>